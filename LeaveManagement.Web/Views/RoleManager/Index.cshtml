@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Manager";
}


<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12 pinpin">
            <div class="card lobicard" data-sortable="true">
                <div class="card-header">
                    <div class="card-title custom_title">
                        <h4>Roles</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AddRole" asp-controller="RoleManager" class="col-sm-6">
                        <div class="input-group">
                            <input name="roleName" class="form-control" style="margin-right: 5px">
                            <span class="input-group-btn">
                                <button class="btn btn-info btn-sm">Add New Role</button>
                            </span>
                        </div>
                    </form>
                    <br />
                    <div class="table-responsive">
                        <table id="dataTableExample1" class="table table-bordered table-striped table-hover">
                            <thead class="back_table_color">
                                <tr class="info">
                                    <th>Role</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        @*<td>@role.Id</td>*@
                                        <td>
                                            @role.Name
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "EditRole", "RoleManager", new { roleName = role.Name, id = role.Id }, new { @class = "btn btn-info btn-sm" })
                                            @Html.ActionLink("Delete", "DeleteRole", "RoleManager", new { roleName = role.Name }, new { @class = "btn btn-danger btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
